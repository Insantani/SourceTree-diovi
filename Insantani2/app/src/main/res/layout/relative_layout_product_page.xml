<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <android.support.v7.widget.CardView
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="9dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0.01dp"
        >
        <RelativeLayout
            android:id="@+id/relative_layout_relative"
            android:layout_width="165dp"
            android:layout_height="210dp"
            android:background="@drawable/shadow_background">

            <ImageView
                android:id="@+id/img_thumbnail_relative_item"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_above="@+id/tv_species"
                android:layout_margin="0dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/product_name_relative_item"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:text="Test"
                android:textColor="@color/insantaniButtonBlack"
                android:textAlignment="center"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/product_price_relative_item"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:textColor="#757575"
                android:text="Test"
                android:textAlignment="center"
                android:textSize="10dp"
                android:layout_marginTop="10dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>